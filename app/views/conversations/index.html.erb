<div class="user-list">
	<% @users.each_with_index do |user, index| %>
    <tr>
    	<div class = "user-div" >
      	<td><%= index +=1 %></td>
      	<td><%= user.email %></td>
      	<td>
        	<%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
                    "data-sid" => current_user.id, "data-rip" => user.id %>
      	</td>
      </div>
    </tr>
	<% end %>
</div>
<div class="chatting-area">
	


</div>