<div class="container">
  <div class="content">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:"forget-form", method: :post }) do |f| %>
      <h3>Forgot password</h3>
      <p> Enter your e-mail address below to reset your password. </p>
      <div class="form-group">
        <div class="input-icon">
          <i class="fa fa-envelope"></i>
          <%= f.email_field :email, autofocus: true, class: "form-control placeholder-no-fix" ,placeholder: "Email"  %>
      </div>
      <div></div>
      <div class="form-actions">
        <button type="button" id="back-btn" class="btn red btn-outline">Back </button>
        <%= f.submit "Send me reset password instructions", class: "btn green pull-right" %> 
      </div>
    <% end %>
  </div>
</div>