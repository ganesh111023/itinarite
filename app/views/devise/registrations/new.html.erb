<div class="container">
  <div class="content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2>Sign up</h2> 
      <% if devise_error_messages!.present?   %>
        <div class="alert alert-danger display-hide">
          <button class="close" data-close="alert"></button>
          <span><%= devise_error_messages! %></span>
        </div>
      <% end %>

      <p> Enter your personal details below: </p>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", required: :required %>
      </div>

    <!--   <div class="form-group">
        <%= f.label :profile_picture %><br />
        <%= f.file_field :profile_picture, class: "form-control" %>
      </div> -->

      <!-- <div class="form-group">
        <%= f.label :address %><br />
        <%= f.text_area :address, class: "form-control" %>
      </div> -->

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", required: :required %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: :required %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: :required %>
      </div>

      <div class="form-actions">
        <%= link_to "Back", new_user_session_path , id: "register-back-btn", class: "btn red btn-outline back-btn"%>
        <%= f.submit "Sign up", id: "register-submit-btn",class: "btn green pull-right"%>

      </div>

    <% end %>
    </div>
  </div>

