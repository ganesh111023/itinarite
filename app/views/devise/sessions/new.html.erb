
<!-- BEGIN LOGO -->
<div class="container">
  <div class="login-logo">
    <a href="/">
        <img src="../assets/itinarite-logov3.png" alt="LOGO" /> 
    </a>
  </div>
  <!-- <h1>LOGO</h1> -->
</div>
<!-- END LOGO -->
<div class="main-content">
  <div class="content-left">
    <h3 class="form-title">Itinarite Is</h3>
    <ul>
      <li><i class="fa fa-car" aria-hidden="true"></i>  Personalized Travel Profile </li></br>
      <li><i class="fa fa-plane" aria-hidden="true"></i>  Exclusive travel tips/guidelines </li></br>
      <li><i class="fa fa-comments" aria-hidden="true"></i>  Interaction with other travelers </li></br>
    </div>
  </div>
  <div class="content content-right">
    <!-- BEGIN LOGIN FORM -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'login-form'}) do |f| %>
      <h3 class="form-title">Login to your account</h3>
        <%= render 'shared/flash_messages'%>
      <div class="form-group">
        <%= f.label :email, "Username", class: "control-label visible-ie8 visible-ie9"  %><br />
        <div class="input-icon">
          <i class="fa fa-user"></i>
          <%= f.email_field :email, autofocus: false, class: "form-control placeholder-no-fix", placeholder: "Username", required: :required %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "control-label visible-ie8 visible-ie9" %>
        <div class="input-icon">
          <i class="fa fa-lock"></i>
          <%= f.password_field :password, autocomplete: "off" , class: "form-control placeholder-no-fix" ,placeholder: "Password" , required: :required %>
        </div>
      </div>
      <div class="form-actions">
         <label class="checkbox">
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          <% end -%>
        </label>
        <%= f.submit "Log in", class: "btn green pull-right"  %>
      </div>
      <div class="login-options">
        <h4>Or login with</h4>
        <div class="social-icons">
          <li>
              <a class="facebook" data-original-title="facebook" href="/users/auth/facebook">
                <i class="fa fa-facebook" ></i>
                <span> facebook </span>
              </a>
          </li>
          <li>
              <a class="twitter" data-original-title="Twitter" href="/users/auth/twitter"> 
                <i class="fa fa-twitter" ></i>
                <span>twitter </span>
              </a>
          </li>
          <li>
              <a class="googleplus" data-original-title="Goole Plus" href="/users/auth/google_oauth2"> 
                <i class="fa fa-google" ></i>

                <span> google</span>
              </a>
          </li>
          <li>
              <a class="linkedin" data-original-title="Linkedin" href="/users/auth/linkedin"> 
                <i class="fa fa-linkedin" ></i>

                <span> linkdin </span>
              </a>
          </li>
        </div>
      </div>
      <div class="forget-password">
        <h4>Forgot your password ?</h4>
        <p> no worries, click
        <a href="/users/password/new" id="forget-password"> here </a> to reset your password. </p>
      </div>
      <div class="create-account">
        <p> Don't have an account yet ?&nbsp;
            <a href="/users/sign_up" id="register-btn"> Create an account </a>
        </p>
      </div>
    <% end %>
   <!-- END LOGIN FORM -->
  </div>
</div>
<div class="clearfix"></div>
